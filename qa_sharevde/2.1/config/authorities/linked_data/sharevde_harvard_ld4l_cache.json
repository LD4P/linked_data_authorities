          "required": false,
          "default": "20"
        },
        {
          "@type": "IriTemplateMapping",
          "variable": "startRecord",
          "property": "hydra:freetextQuery",
          "required": false,
          "default": "1"
        },
        {
          "@type": "IriTemplateMapping",
          "variable": "lang",
          "property": "hydra:freetextQuery",
          "required": false,
          "default": "en"
        }
      ]
    },
    "qa_replacement_patterns": {
      "query":   "query",
      "subauth": "entity"
    },
