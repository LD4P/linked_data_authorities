      "@type":    "IriTemplate",
      "template": "http://services.ld4l.org/ld4l_services/share_vde/lookup.jsp?site=harvard&uri={term_uri}",
      "variableRepresentation": "BasicRepresentation",
      "mapping": [
        {
          "@type":    "IriTemplateMapping",
          "variable": "term_uri",
          "property": "hydra:freetextQuery",
          "required": true
        }
      ]
    },
    "qa_replacement_patterns": {
      "term_id": "term_uri"
    },
    "term_id": "URI",
    "results": {
      "label_ldpath": "bf:title/rdfs:label :: xsd:string"
    }
  },
